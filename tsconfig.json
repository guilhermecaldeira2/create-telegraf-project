{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es6", "ES2015", "DOM"],
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./bin",
    "rootDir": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "types": ["node"],
    "paths": {
      "@cli/*": ["./src/cli/*"],
      "@config/*": ["./src/config/*"],
      "@commands/*": ["./src/commands/*"],
      "@modules/*": ["./src/modules/*"]
    }
  }
}
